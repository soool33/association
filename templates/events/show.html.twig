{% extends 'base.html.twig' %}

{% block body %}

    <section class="container sec-event">
        <div class="text-center">Votre evenement <h3 style="color: darkblue">{{ events.title }}</h3></div>
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide offset-2 col-lg-8 col-md-12 col-sm-12" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="../images/uploads/{{ events.imageName1 }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../images/uploads/{{ events.imageName2 }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../images/uploads/{{ events.imageName3 }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../images/uploads/{{ events.imageName4 }}" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

            <div class="descript-event">
                <h4>Ca se passe a {{ events.lieu }}, le {{ events.dateEvent|date('d-m-Y') }}</h4>
                <p style="justify: content"> {{ events.descriptEvent }}</p>
                <div class="links">
                    <p>Pour participer, cliquez <a class="event-button" href="../{{id}}/inscription/event/new">ICI</a> et inscrivez vous </p>
                </div>
            </div>
        
    </section>
    <section>
        <footer>
            <div class="text-center">
                <a href="https://www.facebook.com/"><i class="fab fa-facebook fa-2x foot"></i></a>
                <a href="https://www.instagram.com/"><i class="fab fa-instagram fa-2x foot"></i></a>
                <a href="https://twitter.com/"><i class="fab fa-twitter-square fa-2x foot"></i></a>
                <a href="https://www.pinterest.fr/"><i class="fab fa-pinterest-square fa-2x foot"></i></a>
            </div>
        </footer>
    </section>

    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}

