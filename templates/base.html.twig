                                    <a href="{{ path('fos_user_security_logout') }}">DÃ©connexion <i class="fas fa-sign-out-alt"></i></a>
                                {% else %}
                                    <a href="{{ path('fos_user_security_login') }}">Connexion <i class="fas fa-sign-in-alt"></i></a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>